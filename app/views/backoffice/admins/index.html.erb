<h1 class="page-header">Administrators</h1>
<div class="panel panel-default">
  <div class="panel-heading">
    Administrators
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>E-mail</th>
            <th>Role</th>
            <th>
              <%= link_to new_backoffice_admin_path, class: "btn btn-primary btn-circle" do %>
                <i class="fa fa-plus"></i>
              <% end %>
            </th>
          </tr>
        </thead>
        <tbody>
        <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.id %></td>
            <td><%= admin.name %></td>
            <td><%= admin.email %></td>
            <td><%= admin.role_i18n %></td>
            <td style="width: 150px">
            <%= link_to edit_backoffice_admin_path(admin), class: "btn btn-warning btn-circle" do %>
              <i class="fa fa-pencil"></i>
            <% end %>
            <% if current_admin.email != admin.email %>
              <%= link_to backoffice_admin_path(admin), method: :delete, class: "btn btn-danger btn-circle", data: {confirm: "Excluir #{admin.email}?"} do %>
                <i class="fa fa-minus"></i>
              <% end %>
            <% else %>
              <%= link_to '#', class: "btn btn-danger btn-circle", disabled: "disabled" do %>
                <i class="fa fa-minus"></i>
              <% end %>
            <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel-default -->
