<h1 class="page-header">Administrators</h1>

<% if @admin.errors.any? %>

  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
      <% @admin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>

<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= action %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
  <%= form_for([:backoffice, @admin]) do |f| %>
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, class: "form-control", placeholder: "Name of Administrator" %>
    </div>
    <div class="form-group">
      <label>E-mail</label>
      <%= f.email_field :email, class: "form-control", placeholder: "example@example.com" %>
    </div>
    <div class="form-group">
      <label>Password</label>
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
    <div class="form-group">
      <label>Password Confirmation</label>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password" %>
    </div>
    <%= f.submit "Confirmar", class: "btn btn-default" %>
  <% end %>
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel-default -->
