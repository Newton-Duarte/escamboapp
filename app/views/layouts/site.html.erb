<!DOCTYPE html>
<html>
<head>
  <title>EscamboApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'site', media: 'all' %>

  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
</head>
<body>

  <div id="global-spin" class="loading" style="display: none;">Loading</div>

  <%= render partial: 'layouts/site_shared/navigation' %>

  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <%= render partial: "layouts/site_shared/sidebar" %>

        <div id="home-detail" class="col-md-9">

          <div class="row">
            <div class="col-lg-6 col-lg-offset-3 text-center">
              <%= form_tag site_search_path, method: :get do %>
                <div class="input-group search-ad">

                  <%= text_field_tag(:search, params[:search], { class: "form-control", placeholder: "Pesquisar por..." }) %>

                  <span class="input-group-btn">
                    <%= submit_tag("Pesquisar", class: "btn btn-default") %>
                  </span>

                </div><!-- /input-group -->
              <% end %>
            </div><!-- /.col-lg-6 -->
          </div><!-- /.row -->

          <% if controller_path == 'site/home' %>

            <%= render partial: "layouts/site_shared/carousel" %>

          <% end %>

          <div class="row">

            <%= yield %>

          </div>

        </div>

    </div>

  </div>
  <!-- /.container -->


  <%= render partial: 'layouts/site_shared/footer' %>

  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'site' %>

  <%= render partial: 'layouts/shared/notifications' %>
</body>
</html>
